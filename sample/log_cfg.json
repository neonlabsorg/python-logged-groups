{
    "version": 1,
    "handlers": {
        "colored": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "colored"
        }
    },
    "formatters": {
        "colored": {
            "class": "logged_groups.ColoredFormatter",
            "format": "%(asctime)23s %(levelname)8s %(process)6d:%(threadName)-10s %(class)30s:%(class_id)-8s %(message)s",
            "style": "%"
        }
    },
    "loggers": {
        "log_group": {
            "level": "DEBUG",
            "handlers": ["colored"],
            "propagate": false
        },
        "other_log_group": {
            "level": "CRITICAL",
            "handlers": ["colored"],
            "propagate": false
        }
    }
}