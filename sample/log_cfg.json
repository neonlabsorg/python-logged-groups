{
    "version": 1,
    "handlers": {
        "colored": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "colored",
            "filters": ["context_filter"]
        }
    },
    "filters": {
        "context_filter": {
            "()": "logged_groups.logging.ContextFilter"
        }
    },
    "formatters": {
        "colored": {
            "()": "logged_groups.logging.ColoredFormatter",
            "fmt_str": "%(asctime)23s %(threadName)10s %(levelname)8s %(context)s %(message)s"
        }
    },
    "loggers": {
        "log_group": {
            "level": "DEBUG",
            "handlers": ["colored"],
            "filters": ["context_filter"],
            "propagate": false
        },
        "other_log_group": {
            "filters": ["context_filter"],
            "level": "DEBUG",
            "handlers": ["colored"],
            "propagate": false
        }
    }
}